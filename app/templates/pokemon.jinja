{% extends 'base.jinja' %}

{% block content %}

<div class="pokemon_container">
    <div class="pokemon_heading">
        <h2>Today's Favorite Pokemon</h2>
        <h4>{{ _date }}</h3>
    </div>

    <div class="card_container">
        {% for k in _dict.keys() %}
        <div class="card text-white bg-dark mb-3 card_style">
            <img class="card-img-top" src={{ _dict[k][2] }} alt={{ _dict[k][1] }} style="max-width: 20rem;">
            <div class="card-body">
                <h5 class="card-title">#{{ _dict[k][0] }}: {{ _dict[k][1] }}</h5>
            </div>
        </div>
        {% endfor %}
    </div>

</div>

{% endblock %}